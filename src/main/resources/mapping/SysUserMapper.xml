<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springboot.shop.dao.SysUserMapper">
    <resultMap id="BaseResultMap" type="com.springboot.shop.entity.Student" >
        <id column="userid" property="id" jdbcType="DOUBLE" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="name" property="username" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="BASE_TABLE">
        tauser
    </sql>
    
    <sql id="sa01">
        sa01
    </sql>

    <sql id="BASE_COLUMN">
        userid,password,name
    </sql>

    <select id="findByUsername" resultType="map" parameterType="string">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
        WHERE name = #{username}
    </select>
    
    <update id="UpdatePwd" parameterType="String">
        update
        <include refid="sa01"></include>
        set gncdbh=113525
        where gncdbh=#{userid}
    </update>
</mapper>
